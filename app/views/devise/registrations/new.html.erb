<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      SIGN UP
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Nickname</label>
    </div>
    <%= f.text_area :name, class:"input-default", id:"nickname", placeholder:"例) encone太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password Confirmation</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Skills</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :last_name, class:"input-default", id:"last-name", placeholder:"例) Ruby" %>
    </div>
  </div>
  <div class="form-group">
  </div>

  <div class='register-btn'>
    <%= f.submit "Registration" ,class:"register-red-btn" %>
  </div>

</div>
<% end %>

<%= render "shared/second-footer"%>
